{% extends "session/login-layout.njk" %}

{% block head %}
    <title>Foodfy - Recuperar senha</title>
{% endblock head%}

{% import "parts/card.njk" as card %}

{% block content %}

    {% call card.render('Esqueceu a senha?', 'password container') %}

        <form method="POST" action="/users/forgot-password">
        
            <div class="fields">
                <div class="item">
                    <div>Email</div>
                    <div class="input">
                        <input 
                            type="email"
                            name="email"
                            placeholder="Digite seu email para recuperar sua senha"
                            value="{{user.email}}"
                        >
                    </div>
                </div>
            </div>

            <button class="button" type="submit">Recuperar</button>

        </form>

    {% endcall %}

{% endblock content %}