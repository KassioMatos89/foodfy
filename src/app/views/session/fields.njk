<div class="item">
    <div>Email</div>
    <div class="input">
        <input 
            type="email"
            name="email"
            placeholder="Digite seu email"
            value="{{user.email}}"
            {% if error %}
                style="border: 1px solid red;"
            {% endif %}
        >
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div class="input">
        <input 
            type="password"
            name="password"
            placeholder="Digite sua senha"
            {% if error %}
                style="border: 1px solid red;"
            {% endif %}
        >
    </div>
</div>