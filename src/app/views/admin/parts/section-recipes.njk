{% macro recipes(name, classes, recipes, url, buttonLabel, pagination) %}

    <section class="container {{classes}}">

        {% if name %}
            <div class="recipe_detail_header">
                <h2>{{name}}</h2>
                <a class="button" href="/admin/{{url}}/create">{{buttonLabel}}</a>
            </div>
        {% endif %}

        <div class="recipe-cards">
                
            {% for recipe in recipes %}
                <div class="recipe-card">
                    <div class="recipe-img">
                        <img src="{{recipe.img}}" alt="{{recipe.title}}">
                    </div>

                    <div class="recipe_detail">
                        <p>{{recipe.title}}</p>
                        <p>por {{recipe.chef_name}}</p>
                        <a href="/admin/recipes/registered/{{recipe.id}}">Visualizar</a>
                    </div>
                </div>
            {% endfor %}

        </div>

        <div class="pagination"
            data-page={{pagination.page}}
            data-total={{pagination.total}}
            data-filter={{filter}}
        ></div>

    </section>

{% endmacro %}